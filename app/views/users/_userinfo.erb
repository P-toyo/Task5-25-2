<div class="col-md-3">
  <h2>User info</h2>
  <%= image_tag @user.get_profile_image %>
  <table class="table">
    <tr></tr>
    <tr>
      <th>name</th>
      <th><%= current_user.name %></th>
    </tr>
    <tr>
      <th>introduction</th>
      <th><%= current_user.introduction %></th>
    </tr>
  </table>
  <div class="row">
    <a class="btn btn-outline-secondary btn-block" href="/users/<%= current_user.id %>/edit">
      <i class="fas fa-user-cog"></i>
    </a>
  </div>
  <h2 class="mt-3">New book</h2>
  <%= form_with model: @post_book, url: books_path, method: :post do |f| %>
    <div class="form-group">
      <label for="book_title">Title</label>
      <div><%= f.text_field :title %></div>
    </div>
    <div class="form-group">
      <label for="book_opinion">Opinion</label>
      <div><%= f.text_area :body %></div>
    </div>
    <div class="form-group">
      <%= f.submit "Create Book" %>
    </div>
  <% end %>
</div>